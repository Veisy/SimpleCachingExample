<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/marginOrPadding_small">


    <ImageView
        android:id="@+id/imageView_restaurant"
        android:layout_width="@dimen/image_medium_phone"
        android:layout_height="@dimen/image_medium_phone"
        android:contentDescription="@string/restaurant_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/textView_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginOrPadding_medium"
        android:text="@string/restaurant_name"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView_restaurant"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restaurant_type"
        app:layout_constraintStart_toStartOf="@+id/textView_name"
        app:layout_constraintTop_toBottomOf="@+id/textView_name" />

    <TextView
        android:id="@+id/textView_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/restaurant_address"
        app:layout_constraintStart_toStartOf="@+id/textView_type"
        app:layout_constraintTop_toBottomOf="@+id/textView_type" />


</androidx.constraintlayout.widget.ConstraintLayout>